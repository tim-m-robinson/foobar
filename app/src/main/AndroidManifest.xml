<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tmr.telehealth">

    <application
        android:name=".TeleHealthApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_tele"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label=""
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name=".CalActivity"
            android:label="@string/title_activity_cal"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.tmr.telehealth.MainActivity" />
        </activity>
        <activity
            android:name=".ApptActivity"
            android:label="@string/title_activity_appt"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.tmr.telehealth.MainActivity" />
        </activity>
        <activity
            android:name=".MonitorActivity"
            android:label="@string/title_activity_monitor"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.tmr.telehealth.MainActivity" />
        </activity>
        <activity
            android:name=".MsgActivity"
            android:label="@string/title_activity_msg"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.tmr.telehealth.MainActivity" />
        </activity>
    </application>

</manifest>
