<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin_top"
    android:background="@drawable/gaussian_blur_pink"
    tools:context="org.tmr.telehealth.MsgActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/msg_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="#10000000"
        android:theme="@style/MyActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/msg_toolbar"
        android:background="#c0c0c0"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_below="@id/msg_toolbar">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/msg_horizontal_margin"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/actionBar">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/msg_horizontal_margin"
                android:gravity="left"
                android:src="@drawable/message_filled_100"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/msg_horizontal_margin"
                android:gravity="center_vertical"
                android:text="Appointment"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/msg_horizontal_margin"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/actionBar">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/msg_horizontal_margin"
                android:gravity="left"
                android:src="@drawable/message_filled_100"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/msg_horizontal_margin"
                android:gravity="center_vertical"
                android:text="Appointment"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/msg_horizontal_margin"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/actionBar">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/msg_horizontal_margin"
                android:gravity="left"
                android:src="@drawable/read_message_100"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/msg_horizontal_margin"
                android:gravity="center_vertical"
                android:text="Appointment"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>
